<div class="hero-unit">
  <h2>All Friends</h2>
  <%- linkTo('Create a new Friend', addFriendPath, {class: 'btn pull-right'}); %>
</div>

<div id="friends-list">
<% if (friends) { %>
<% for (var i = 0, ii = friends.length; i < ii; i++) { %>
  <div class="row list-item" id="friend-<%= friends[i].id; %>">
    <div class="span8">
      <h3><%- linkTo(friends[i].friendUserId, userPath(friends[i].friendUserId)); %></h3>
    </div>
    <div class="span4">
      <h3><i class="icon-list-alt"></i><%= friends[i].id; %></h3>
    </div>
  </div>
<% } %>
<% } %>
</div>
